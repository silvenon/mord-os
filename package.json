{
  "private": true,
  "scripts": {
    "css": "tailwindcss --output style.css",
    "dev": "npm run css && npm-run-all --parallel dev:*",
    "dev:css": "npm run css -- --watch",
    "dev:vite": "vite",
    "build": "npm-run-all --serial build:css build:parcel",
    "build:css": "npm run css -- --minify",
    "build:vite": "vite build",
    "start": "vite preview"
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged",
    "pre-push": "npx tsc --noEmit"
  },
  "nano-staged": {
    "*.{jsx,ts}?(x)": "eslint --fix"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.5",
    "@nanostores/react": "^0.1.5",
    "@nanostores/router": "^0.2.1",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "@vitejs/plugin-react": "^1.1.3",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "nano-staged": "^0.5.0",
    "nanostores": "^0.5.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "simple-git-hooks": "^2.7.0",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.5.4",
    "vite": "^2.7.6"
  }
}
