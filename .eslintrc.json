{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:import/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "overrides": [
    {
      "files": "./src/**/*.tsx",
      "extends": [
        "plugin:react/recommended",
        "prettier"
      ],
      "rules": {
        "react/react-in-jsx-scope": "off"
      }
    },
    {
      "files": "./src/**/*.ts?(x)",
      "extends": [
        "plugin:@typescript-eslint/recommended",
        "prettier"
      ],
      "settings": {
        "import/parsers": {
          "@typescript-eslint/parser": [".ts", ".tsx"]
        },
        "import/resolver": {
          "typescript": {}
        }
      }
    }
  ]
}